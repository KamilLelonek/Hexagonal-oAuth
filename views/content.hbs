<section id="profile" class="jumbotron">
  <div class="thumbnail center-block">
    <img src="{{user.image}}" class="img-thumbnail" width="100" height="100">
    <div class="caption">
      <h3 id="profile-photo-title">Profile photo</h3>
    </div>
  </div>
  <ul class="list-group">
    <li class="list-group-item list-group-item-warning">
      <h4 class="list-group-item-heading">Email / ID</h4>
      <p class="list-group-item-text">{{user.email}}</p>
    </li>
  </ul>
  {{#unless user.settings.has_password}}
    <section id="set-password">
      <input id="new-password" type="password" required min="6">
      <button id="btn-set-password" class="btn">Set password</button>
      <span id="message-set-password"></span>
    </section>
  {{/unless}}
  <button id="btn-logout" class="btn btn-block">Logout</button>
</section>